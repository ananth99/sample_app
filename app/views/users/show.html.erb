<% provide(:title,@user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
			<%= gravatar_for @user %>
			<%= @user.name %> 
			</h1>
		</section>
	</aside>
	<section>
      <%= render 'shared/stats' %>
    </section>
	<div class="span8">
	<% if !current_user.following?(@user) %>
		<%= render 'follow_form' unless current_user?(@user) %>
	<% else %>
		<%= render 'unfollow_form' unless current_user?(@user) %>
	<% end %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
